<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:id="@+id/match_image"
            android:scaleType="centerCrop"
            android:layout_alignParentStart="true"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:id="@+id/match_title"
            android:autoSizeTextType="uniform"
            android:layout_margin="5dp"
            android:layout_toEndOf="@+id/match_image"
            android:layout_alignTop="@+id/match_image"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:id="@+id/match_endTime"
            android:autoSizeTextType="uniform"
            android:gravity="center_vertical"
            android:layout_margin="5dp"
            android:layout_toEndOf="@+id/match_image"
            android:layout_alignBottom="@+id/match_image"/>
        <Button
            android:layout_width="78dp"
            android:layout_height="32dp"
            android:textSize="13sp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:text="详情"
            android:id="@+id/detail_btn"
            android:background="@drawable/circle_corner_bottom_selector"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>